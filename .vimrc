set nocompatible

set expandtab
set shiftround
set shiftwidth=4
set tabstop=4
set softtabstop=4

set ignorecase
set smartcase

set lazyredraw

set cmdheight=2
set showcmd
set cursorline
set number
set visualbell
set noerrorbells
set t_vb=
set background=dark
set nowrap

set confirm
set backupdir=~/.cache/vim
set dir=~/.cache/vim
set hidden
set history=1000
set nomodeline
set wildignore+=.pyc,.swp
set splitright
set splitbelow
